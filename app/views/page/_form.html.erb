
<table summary="Subject form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.text_field(:position) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.select :visible, options_for_select([["Yes", 1], ["No", 2]]) %></td></td>
  </tr>
  <tr>
    <th>Subject ID</th>
    <td><%= f.text_field(:subject_id) %></td></td>
  </tr>
</table>