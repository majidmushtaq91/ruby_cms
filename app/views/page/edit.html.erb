<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="page edit">
  <h2>Update Page</h2>

  <%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>

      <table summary="Subject form fields">
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name) %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position) %></td>
        </tr>
        <tr>
          <th>Visible</th>
          <td> <%= f.select :visible, options_for_select([["Yes", 1], ["No", 2]]) %></td>
        </tr>
        <tr>
          <th>Subject ID</th>
          <td><%= f.text_field(:subject_id) %></td></td>
        </tr>
      </table>

      <div class="form-buttons">
        <%= submit_tag("Update Page") %>
      </div>

  <% end %>
</div>
