<div class="col-xs-6 col-sm-4">
  <nav>
    <ul class="pager">
      <li><%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %></li>
    </ul>
  </nav>
  <h2>Edit Section</h2>

  <%= form_for(:section, :url => {:action => 'update', :id => @section.id}) do |f| %>

      <%= render(:partial => "section/form", :locals =>  {:f => f}) %>
      <div class="form-buttons">
        <%= submit_tag("Update", :class => "btn btn-success") %>
      </div>

  <% end %>
</div>

