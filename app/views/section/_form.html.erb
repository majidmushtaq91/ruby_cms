
<table summary="Section form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.text_field(:position) %></td>
  </tr>
  <tr>
    <th>Page ID</th>
    <td><%= f.text_field(:page_id) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.select :visible, options_for_select([["Yes", true], ["No", false]]) %></td></td>
  </tr>
  <tr>
    <th>Content Type</th>
    <td><%= f.text_field(:content_type) %></td></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= f.text_field(:content) %></td></td>
  </tr>
</table>